---
import '../styles/global.css';
import Navbar from '../components/Navbar.tsx';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Blog | CyberSec Portfolio</title>
		<script is:inline>
			(function() {
				const theme = localStorage.getItem('theme') || 'system';
				const root = document.documentElement;
				if (theme === 'system') {
					const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
					root.classList.add(systemDark ? 'dark' : 'light');
				} else {
					root.classList.add(theme);
				}
			})();
		</script>
	</head>

	<body class="bg-background text-foreground min-h-screen">
		<Navbar client:load />
		
		<main class="pt-24 px-4 max-w-4xl mx-auto">
			<h1 class="text-4xl md:text-5xl font-bold mb-4">Blog</h1>
			<p class="text-muted-foreground mb-8">Text1</p>
			
			<div class="space-y-6">
				<article class="p-6 bg-secondary rounded-lg border border-border hover:border-foreground/20 transition">
					<time class="text-sm text-muted-foreground">Text2</time>
					<h2 class="text-xl font-semibold mt-2 mb-2">
						<a href="#" class="hover:text-accent transition">
							Text3
						</a>
					</h2>
					<p class="text-muted-foreground text-sm">
						Text4
					</p>
					<div class="flex gap-2 mt-4">
						<span class="px-2 py-1 text-xs bg-muted rounded">Text5</span>
						<span class="px-2 py-1 text-xs bg-muted rounded">Text6</span>
					</div>
				</article>
				
				<article class="p-6 bg-secondary rounded-lg border border-border hover:border-foreground/20 transition">
					<time class="text-sm text-muted-foreground">Text7</time>
