---
import '../../styles/global.css';
import Navbar from '../../components/Navbar.tsx';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Projects | CyberSec Portfolio</title>
		<script is:inline>
			(function() {
				const theme = localStorage.getItem('theme') || 'system';
				const root = document.documentElement;
				if (theme === 'system') {
					const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
					root.classList.add(systemDark ? 'dark' : 'light');
				} else {
					root.classList.add(theme);
				}
			})();
		</script>
	</head>

	<body class="bg-background text-foreground min-h-screen">
		<Navbar client:load />
		
		<main class="pt-24 px-4 max-w-6xl mx-auto">
			<h1 class="text-4xl md:text-5xl font-bold mb-4">Projects</h1>
			<p class="text-muted-foreground mb-8">Security research, tools, and CTF writeups</p>
			
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
				<article class="p-6 bg-secondary rounded-lg border border-border hover:border-foreground/20 transition">
					<div class="text-xs text-emerald-500 dark:text-emerald-400 mb-2">Text1</div>
					<h2 class="text-xl font-semibold mb-2">Text2</h2>
					<p class="text-muted-foreground text-sm mb-4">
						Text3
					<div class="flex gap-2">
						<span class="px-2 py-1 text-xs bg-muted rounded">Text4</span>
						<span class="px-2 py-1 text-xs bg-muted rounded">Text5</span>
					</div>
				</article>
				
				<article class="p-6 bg-secondary rounded-lg border border-border hover:border-foreground/20 transition">
					<div class="text-xs text-accent mb-2">Text6</div>
					<h2 class="text-xl font-semibold mb-2">Text7</h2>
					<p class="text-muted-foreground text-sm mb-4">
						Text8
					</p>
					<div class="flex gap-2">
						<span class="px-2 py-1 text-xs bg-muted rounded">Text9</span>
						<span class="px-2 py-1 text-xs bg-muted rounded">Text10</span>
					</div>
				</article>
				
				<article class="p-6 bg-secondary rounded-lg border border-border hover:border-foreground/20 transition">
					<div class="text-xs text-purple-500 dark:text-purple-400 mb-2">Text11</div>
					<h2 class="text-xl font-semibold mb-2">Text12</h2>
					<p class="text-muted-foreground text-sm mb-4">
						Text13
					</p>
					<div class="flex gap-2">
						<span class="px-2 py-1 text-xs bg-muted rounded">Text14</span>
						<span class="px-2 py-1 text-xs bg-muted rounded">Text15</span>
					</div>
				</article>
			</div>
		</main>
	</body>
</html>
