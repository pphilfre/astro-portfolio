---
import '../../styles/global.css';
import Navbar from '../../components/Navbar.tsx';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>CTF Writeups | Freddie Philpot</title>
		<script is:inline>
			(function() {
				const theme = localStorage.getItem('theme') || 'system';
				const root = document.documentElement;
				if (theme === 'system') {
					const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
					root.classList.add(systemDark ? 'dark' : 'light');
				} else {
					root.classList.add(theme);
				}
			})();
		</script>
	</head>

	<body class="bg-background text-foreground min-h-screen">
		<Navbar client:load />
		
		<main class="pt-24 px-4 max-w-4xl mx-auto">
			<h1 class="text-4xl md:text-5xl font-bold mb-4">CTF Writeups</h1>
			<p class="text-muted-foreground mb-8">Capture The Flag challenges & solutions</p>
			
			<div class="space-y-4">
				<article class="p-6 bg-secondary rounded-lg border border-border hover:border-foreground/20 transition">
					<div class="flex items-center gap-4 mb-2">
						<span class="px-2 py-1 text-xs bg-accent/20 text-accent rounded">Text2</span>
						<span class="text-sm text-muted-foreground">Text3</span>
					</div>
					<h2 class="text-xl font-semibold mb-2">Text4</h2>
					<p class="text-muted-foreground text-sm">
						Text5
					</p>
				</article>
				
				<article class="p-6 bg-secondary rounded-lg border border-border hover:border-foreground/20 transition">
					<div class="flex items-center gap-4 mb-2">
						<span class="px-2 py-1 text-xs bg-accent/20 text-accent rounded">Text6</span>
						<span class="text-sm text-muted-foreground">Text7</span>
					</div>
					<h2 class="text-xl font-semibold mb-2">Text8</h2>
					<p class="text-muted-foreground text-sm">
						Text9
					</p>
				</article>
				
				<article class="p-6 bg-secondary rounded-lg border border-border hover:border-foreground/20 transition">
					<div class="flex items-center gap-4 mb-2">
						<span class="px-2 py-1 text-xs bg-accent/20 text-accent rounded">Text10</span>
						<span class="text-sm text-muted-foreground">Text11</span>
					</div>
					<h2 class="text-xl font-semibold mb-2">Text12</h2>
					<p class="text-muted-foreground text-sm">
						Text13
					</p>
				</article>
			</div>
		</main>
	</body>
</html>
