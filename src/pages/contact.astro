---
import '../styles/global.css';
import Navbar from '../components/Navbar.tsx';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Contact | Freddie Philpot</title>
		<script is:inline>
			(function() {
				const theme = localStorage.getItem('theme') || 'system';
				const root = document.documentElement;
				if (theme === 'system') {
					const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
					root.classList.add(systemDark ? 'dark' : 'light');
				} else {
					root.classList.add(theme);
				}
			})();
		</script>
	</head>

	<body class="bg-background text-foreground min-h-screen">
		<Navbar client:load />
		
		<main class="pt-24 px-4 max-w-2xl mx-auto pb-16">
			<h1 class="text-4xl md:text-5xl font-bold mb-4">Contact</h1>
			<p class="text-muted-foreground mb-8">Get in touch</p>
			
			<div class="space-y-6">
				<a 
					href="mailto:contact@freddiephilpot.dev" 
					class="block p-6 bg-secondary rounded-lg border border-border hover:border-foreground/20 transition"
				>
					<div class="text-xs text-accent mb-2">Email</div>
					<p class="font-medium text-foreground">contact@freddiephilpot.dev</p>
					<p class="text-sm text-muted-foreground mt-1">Preferred method for professional enquiries</p>
				</a>
				
				<a 
					href="#LINKEDIN_URL" 
					target="_blank" 
					rel="noopener noreferrer"
					class="block p-6 bg-secondary rounded-lg border border-border hover:border-foreground/20 transition"
				>
					<div class="text-xs text-accent mb-2">LinkedIn</div>
					<p class="font-medium text-foreground">Professional Profile</p>
					<p class="text-sm text-muted-foreground mt-1">Professional profile and experience</p>
				</a>
				
				<a 
					href="#GITHUB_URL" 
					target="_blank" 
					rel="noopener noreferrer"
					class="block p-6 bg-secondary rounded-lg border border-border hover:border-foreground/20 transition"
				>
					<div class="text-xs text-accent mb-2">GitHub</div>
					<p class="font-medium text-foreground">Projects & Code</p>
					<p class="text-sm text-muted-foreground mt-1">Projects and contributions</p>
				</a>
				
				<div class="pt-6 border-t border-border">
					<p class="text-muted-foreground text-sm">
						I welcome enquiries regarding technology degree apprenticeship opportunities, collaboration on projects, or general questions about my work and experience.
					</p>
				</div>
			</div>
		</main>
	</body>
</html>
